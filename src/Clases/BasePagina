package Contenidos;

import java.util.List;
import java.util.ArrayList;

public class BasicWebpagina implements webpagina {
    private String title;
    private List<Section> sections;
    
    public BasicWebpagina(String title, List<Section> sections) {
        this.title = title;
        this.sections = sections;
    }
    
    public String display() {
        ArrayList<String> hmtl = new ArrayList<String>();
        html.append("<!DOCTYPE html>");
        html.append('\n<hmtl lang="en">');
        html.append("\n<head>");
        html.append("\n\t<title>"+title+"</title>");
        html.append("\n</head>\n<body>");
        
        for (Section section : sections) {
            html.append("\n\t<header>\n\t\t<h1>Juan el despechado"++"</h1>")
            html.append("\n\t</header>")
            html.append("\n\t</section>")
            builder.append("<h1>");
            builder.append(section.getName());
            builder.append("</h1>");
            builder.append("<ul>");
            
            for (Article article : section.getArticles()) {
                builder.append("<li>");
                builder.append("<h2>");
                builder.append(article.getTitle());
                builder.append("</h2>");
                builder.append("<p>");
                builder.append(article.getContent());
                builder.append("</p>");
                builder.append("<p>");
                builder.append("By: ");
                builder.append(article.getAuthor());
                builder.append("</p>");
                builder.append("</li>");
            }
            
            builder.append("</ul>");
        }
        
        builder.append("</body></html>");
        return builder.toString();
    }

}